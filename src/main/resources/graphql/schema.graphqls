type Query {
    customerById(id: ID): Customer
}

type Customer {
    id: ID
    name: String
    role: String
    age: Int
    customerContactDetails: CustomerContactDetails
}

type CustomerContactDetails {
    id: ID
    email: String
    mobile: String
    address: String
}

type Mutation {
    addCustomer(name: String, age: Int, role: String, email: String, mobile: String, address: String): Customer
}